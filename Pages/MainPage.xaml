<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AIUB.Portal.Pages.MainPage"
             Title="Dashboard">
    
    <VerticalStackLayout>
        <Label Text="Welcome to AIUB sample Dashboard" Margin="0,0,0,20" FontSize="Large" HorizontalOptions="Center"/>
        <Button Text="Logout" 
                Clicked="Logout_Button_Clicked"
                BackgroundColor="#524949" 
                TextColor="#FFFFFF" 
                CornerRadius="10" 
                HeightRequest="50" 
                HorizontalOptions="Center" 
                WidthRequest="200" 
                Margin="0,40,0,0">
        </Button>
    </VerticalStackLayout>

</ContentPage>
